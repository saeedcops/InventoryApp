@model Inventory.Core.Interfaces.TakeOutParams

@{
    ViewData["Title"] = "TakeOut";
}

<h1>Take out</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TakeOut">
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class ="form-control" asp-items="ViewBag.Status"></select>
            </div>
             <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
      
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class ="form-control" asp-items="ViewBag.Category"></select>
            </div>

            <div class="form-group">
                <label asp-for="Customer" class="control-label"></label>
                <select asp-for="Customer" class ="form-control" asp-items="ViewBag.Customer"></select>
            </div>
            
           <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                <select asp-for="Employee" class ="form-control" asp-items="ViewBag.Employee"></select>
            </div>
             <div class="form-group m-2 d-flex justify-content-between">
                <input type="submit" value="TakeOut" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
